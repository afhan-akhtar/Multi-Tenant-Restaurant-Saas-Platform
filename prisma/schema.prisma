// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



//////////////////// ENUMS ////////////////////

enum TenantStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum StaffStatus {
  ACTIVE
  INACTIVE
}

enum OrderType {
  DINE_IN
  TAKEAWAY
}

enum OrderStatus {
  OPEN
  CONFIRMED
  PREPARING
  READY
  COMPLETED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CASH
  STRIPE
  PAYPAL
  CARD
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
}

enum KDSStatus {
  CREATED
  COOKING
  READY
  DISPATCHED
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

//////////////////// TABLES ////////////////////

model SuperAdmin {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  passwordHash String
  createdAt   DateTime @default(now())
}

model Tenant {
  id          Int                  @id @default(autoincrement())
  name        String
  subdomain   String               @unique
  status      TenantStatus         @default(ACTIVE)
  createdAt   DateTime             @default(now())

  branches      Branch[]
  roles         Role[]
  staff         Staff[]
  subscription  TenantSubscription[]
  categories    Category[]
  products      Product[]
  addonGroups   AddonGroup[]
  diningTables  DiningTable[]
  sessions      Session[]
  customers     Customer[]
  segments      Segment[]
  emailCampaigns EmailCampaign[]
  orders        Order[]
  cashbookEntries CashbookEntry[]
  auditLogs     AuditLog[]
}

model SubscriptionPlan {
  id                Int                  @id @default(autoincrement())
  name              String
  monthlyPrice      Decimal
  commissionPercent Decimal
  features          Json
  tenantSubscriptions TenantSubscription[]
}

model TenantSubscription {
  id        Int                @id @default(autoincrement())
  tenantId  Int
  planId    Int
  status    SubscriptionStatus
  startDate DateTime
  endDate   DateTime

  tenant    Tenant             @relation(fields: [tenantId], references: [id])
  plan      SubscriptionPlan   @relation(fields: [planId], references: [id])

  @@index([tenantId])
}

model Branch {
  id       Int     @id @default(autoincrement())
  tenantId Int
  name     String
  address  String
  city     String
  country  String

  tenant       Tenant       @relation(fields: [tenantId], references: [id])
  staff        Staff[]
  diningTables DiningTable[]
  sessions     Session[]
  orders       Order[]
  kdsScreens   KDSScreen[]

  @@index([tenantId])
}

model Role {
  id       Int     @id @default(autoincrement())
  tenantId Int
  name     String

  tenant   Tenant  @relation(fields: [tenantId], references: [id])
  staff    Staff[]
  rolePermissions RolePermission[]

  @@index([tenantId])
}

model Permission {
  id   Int    @id @default(autoincrement())
  code String @unique
  rolePermissions RolePermission[]
}

model RolePermission {
  id           Int        @id @default(autoincrement())
  roleId       Int
  permissionId Int

  role        Role       @relation(fields: [roleId], references: [id])
  permission  Permission @relation(fields: [permissionId], references: [id])

  @@unique([roleId, permissionId])
}

model Staff {
  id         Int         @id @default(autoincrement())
  tenantId   Int
  branchId   Int
  roleId     Int
  name       String
  email      String
  passwordHash String
  status     StaffStatus @default(ACTIVE)
  createdAt  DateTime    @default(now())

  tenant     Tenant      @relation(fields: [tenantId], references: [id])
  branch     Branch      @relation(fields: [branchId], references: [id])
  role       Role        @relation(fields: [roleId], references: [id])
  sessions   Session[]   @relation("WaiterSessions")
  auditLogs  AuditLog[]

  @@index([tenantId])
}

model Category {
  id       Int      @id @default(autoincrement())
  tenantId Int
  name     String
  parentId Int?

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  parent   Category? @relation("CategoryToCategory", fields: [parentId], references: [id])
  children Category[] @relation("CategoryToCategory")

  products Product[]

  @@index([tenantId])
}

model Product {
  id          Int           @id @default(autoincrement())
  tenantId    Int
  categoryId  Int
  name        String
  description String
  plu         String
  basePrice   Decimal
  taxRate     Decimal
  allergens   Json?
  dietaryFlags Json?
  isActive    Boolean      @default(true)

  tenant     Tenant        @relation(fields: [tenantId], references: [id])
  category   Category      @relation(fields: [categoryId], references: [id])
  variants   ProductVariant[]
  orderItems OrderItem[]

  @@index([tenantId])
}

model ProductVariant {
  id        Int     @id @default(autoincrement())
  productId Int
  name      String
  price     Decimal

  product   Product @relation(fields: [productId], references: [id])
}

model AddonGroup {
  id        Int     @id @default(autoincrement())
  tenantId  Int
  name      String
  minSelect Int
  maxSelect Int

  tenant    Tenant      @relation(fields: [tenantId], references: [id])
  addonItems AddonItem[]
}

model AddonItem {
  id      Int        @id @default(autoincrement())
  groupId Int
  name    String
  price   Decimal

  group   AddonGroup @relation(fields: [groupId], references: [id])
}

model DiningTable {
  id        Int         @id @default(autoincrement())
  tenantId  Int
  branchId  Int
  name      String
  seats     Int
  status    TableStatus

  tenant    Tenant      @relation(fields: [tenantId], references: [id])
  branch    Branch      @relation(fields: [branchId], references: [id])
  sessions  Session[]
  orders    Order[]
}

model Session {
  id        Int        @id @default(autoincrement())
  tenantId  Int
  branchId  Int
  tableId   Int
  waiterId  Int
  openedAt  DateTime
  closedAt  DateTime?

  tenant    Tenant     @relation(fields: [tenantId], references: [id])
  branch    Branch     @relation(fields: [branchId], references: [id])
  table     DiningTable @relation(fields: [tableId], references: [id])
  waiter    Staff       @relation("WaiterSessions", fields: [waiterId], references: [id])
  orders    Order[]
}

model Customer {
  id          Int       @id @default(autoincrement())
  tenantId    Int
  name        String
  phone       String
  email       String
  loyaltyPoints Int     @default(0)

  tenant      Tenant    @relation(fields: [tenantId], references: [id])
  orders      Order[]
}

model Segment {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  rules     Json

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model EmailCampaign {
  id         Int      @id @default(autoincrement())
  tenantId   Int
  subject    String
  content    Json
  scheduledAt DateTime

  tenant     Tenant   @relation(fields: [tenantId], references: [id])
}

model Order {
  id           Int       @id @default(autoincrement())
  tenantId     Int
  branchId     Int
  sessionId    Int
  tableId      Int
  customerId   Int
  orderNumber  String
  orderType    OrderType
  status       OrderStatus
  subtotal     Decimal
  taxAmount    Decimal
  discountAmount Decimal
  tipAmount    Decimal
  grandTotal   Decimal
  createdAt    DateTime @default(now())

  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  branch       Branch    @relation(fields: [branchId], references: [id])
  session      Session   @relation(fields: [sessionId], references: [id])
  table        DiningTable @relation(fields: [tableId], references: [id])
  customer     Customer  @relation(fields: [customerId], references: [id])
  orderItems   OrderItem[]
  payments     Payment[]
  tseTransactions TSETransaction[]
}

model OrderItem {
  id          Int       @id @default(autoincrement())
  orderId     Int
  productId   Int
  productName String
  unitPrice   Decimal
  taxRate     Decimal
  quantity    Int
  totalAmount Decimal
  status      OrderStatus

  order       Order     @relation(fields: [orderId], references: [id])
  product     Product   @relation(fields: [productId], references: [id])
  kdsItems    KDSItem[]
}

model Payment {
  id          Int       @id @default(autoincrement())
  orderId     Int
  method      PaymentMethod
  status      PaymentStatus
  amount      Decimal
  providerRef String?
  createdAt   DateTime @default(now())

  order       Order     @relation(fields: [orderId], references: [id])
}

model TSETransaction {
  id         Int      @id @default(autoincrement())
  orderId    Int
  signature  String
  fiskalyTxId String
  signedAt   DateTime

  order      Order    @relation(fields: [orderId], references: [id])
}

model CashbookEntry {
  id          Int      @id @default(autoincrement())
  tenantId    Int
  type        String
  amount      Decimal
  referenceId Int?
  createdAt   DateTime @default(now())

  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}

model KDSScreen {
  id       Int      @id @default(autoincrement())
  branchId Int
  name     String

  branch   Branch   @relation(fields: [branchId], references: [id])
  kdsItems KDSItem[]
}

model KDSItem {
  id          Int      @id @default(autoincrement())
  orderItemId Int
  screenId    Int
  status      KDSStatus

  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  screen      KDSScreen @relation(fields: [screenId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  actorId   Int
  action    String
  entityType String
  entityId  Int
  createdAt DateTime @default(now())

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  staff     Staff    @relation(fields: [actorId], references: [id])
}